{{!-- barber 1 --}}
<div class="container">
  <div class="row">
    {{#each barber}}
    <div class="card col-sm-4 card-color" id="barber_{{id}}"> 
      <img src="{{image}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text"> 
  </p>
      </div>
      <ul class="list-group list-group-flush card-color">
        <li class="list-group-item info-color">RATING: {{rating}}</li>
        <li class="list-group-item info-color">CAR: {{car}}</li>
        <li class="list-group-item info-color">LICENSE PLATE: {{licence_plate}}</li>
        <li class="list-group-item info-color">PHONE# {{phone_number}}</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link choose_barber " data-barber="{{id}}" style="font-family:Lobster, cursive; font-size:25px;">Book Now</a>
        {{!-- <a href="#" class="card-link">Another link</a> --}}
      </div>
    </div>
  {{/each}}
  </div>
</div>
{{!-- modal --}}
<div class="modal" tabindex="-1" role="dialog" id="appointment">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="modal-two">CONFIRM YOUR APPOINTMENT</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          
          <div class="booking">
          <p class="your-app">You are scheduling an appointment with, <span id="barber_name"></span></p>
          <input type="date" id="appointment_day">
          <input type="time" id="appointment_time">
          <label class="update_location">Update or change location<input type= "text" id="appointment_location"></label>
          </div>
        {{!-- add location --}}
          {{!-- <input type="submit"> --}}
          <img src='' id="pic">
          <div class="confirming">Your appointment has been booked!</div>
        </div>
        <div class="modal-footer booking" >
          <button type="button" class="btn btn-primary">BOOK NOW</button>
        </div>
      </div>
    </div>
  </div>
  <script>

  

 $('.choose_barber').on('click',function (event){
   $('.booking input').val("");
   $('.modal-title').text("CONFIRM YOUR APPOINTMENT");
   let barber_card_id = "#barber_" + $(this).attr("data-barber");
   $('#barber_name').text($(barber_card_id + ' .card-title').text());
   $('#pic').attr('src',$(barber_card_id + ' .card-img-top').attr('src'));
    $('.booking').show();
  $('.confirming').hide();
   $('#appointment').modal('show');
    
 });

$('.booking button').on('click', function(event){
  $('.booking').hide();
  $('.confirming').show();
  $('.modal-title').text("");
 
  
})

  </script>