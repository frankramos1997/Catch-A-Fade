{{!-- barber 1 --}}
<div class="container">
  <div class="row">
    {{#each barber}}
    <div class="card col-sm-4 card-color" id="barber_{{id}}"> 
      <img src="{{image}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text"> 
  </p>
      </div>
      <ul class="list-group list-group-flush card-color">
        <li class="list-group-item info-color">RATING: {{rating}}</li>
        {{!-- <li class="list-group-item info-color">CAR: {{car}}</li>
        <li class="list-group-item info-color">LICENCE PLATE: {{licence_plate}}</li>
        <li class="list-group-item info-color">PHONE# {{phone_number}}</li> --}}
      </ul>
      <div class="card-body">
        <a href="#" class="card-link choose_barber " data-barber="{{id}}" style="font-family:Lobster, cursive; font-size:25px;">Book Now</a>
        {{!-- <a href="#" class="card-link">Another link</a> --}}
      </div>
    </div>
  {{/each}}
  </div>
</div>
{{!-- modal --}}
<div class="modal" tabindex="-1" role="dialog" id="appointment">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">CONFIRM YOUR APPOINTMENT</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p class="your-app">You are setting up an appointment with, <span id="barber_name"></span></p>
          <input type="date" id="appointment_day">
          <input type="time" id="appointment_time">
          <input type= "text" id="appointment_location">
        {{!-- add location --}}
          <input type="submit">
          <img src id="pic">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">BOOK NOW</button>
        </div>
      </div>
    </div>
  </div>
  <script>

 $('.choose_barber').on('click',function (event){
   let barber_card_id = "#barber_" + $(this).attr("data-barber");
   $('#barber_name').text($(barber_card_id + ' .card-title').text());
   $('#pic').attr('src',$(barber_card_id + ' .card-img-top').attr('src'));
  
   $('#appointment').modal('show');
   
 });

  </script>