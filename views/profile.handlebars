
<div class="card">
  <div class="card-header">
    {{user.email}} <span class="badge">{{user.role}}</span>
  </div>
<!-- if barber show exception details -->
  {{#ifvalue user.role value="barber"}}
  <div class="card-body">
    <h5 class="card-title">Welcome In {{barberData.firstname}} {{barberData.lastname}} !</h5>

    {{#ifvalue barberData.isUpdated value=0}}

     <p class="card-text">It is time to add your information.</p>

    {{/ifvalue}}

  </div>

  {{else}}

  <div class="card-body">
    <h5 class="card-title">Welcome In <span>{{customerData.firstname}} {{customerData.lastname}} !</span></h5>


    {{#ifvalue customerData.isUpdated value=0}}

     <p class="card-text">It is time to add your information.</p>

    {{/ifvalue}}

    <a href="/barbers" class="mt-3 default-btn">Get Started</a>

  </div>

  {{/ifvalue}}

</div>


<div class="row mt-5 register">
  <div class="col-lg-6 col-md-12 my-5">
    <div class="card card-body card-photo">
      <h4 class="text-center mb-3">
        Edit Photo
      </h4>
      <form method="post" enctype="multipart/form-data" action="/upload">
          <div class="custom-file">
             <input type="file" name=file class="custom-file-input" id="validatedCustomFile" required>
             <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
             <div class="invalid-feedback">Example invalid custom file feedback</div>
           </div>
           <button type="submit" class="btn btn-primary btn-submit my-5">
             Update Photo
           </button>
      </form>
      <div class="coming-soon-box">
        <div class="soon">
           <span>Coming Soon</span>
        </div>
      </div>
    </div>
  </div>


  {{#ifvalue user.role value="barber"}}

  <div class="col-lg-6 col-md-12 my-5">
    <div class="card card-body">
      <h4 class="text-center mb-3">
        Edit Profile
      </h4>
      <form action="/api/barber/profile" method="POST">
        <div class="form-group">
          {{#ifvalue barberData.isUpdated value=1}}
              <label for="firstname">First Name</label>
              <input
                type="text"
                id="firstname"
                name="firstname"
                class="form-control"
                value={{barberData.firstname}}
              />
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                class="form-control"
                value={{barberData.lastname}}
              />
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input
                type="text"
                id="phone"
                name="phone"
                class="form-control"
                value={{barberData.phone_number}}
              />
            </div>
            <div class="form-group">
              <label for="email">Car Model</label>
              <input
                type="text"
                id="car"
                name="car"
                class="form-control"
                value={{barberData.car_type}}
              />
            </div>
            <div class="form-group">
              <label for="email">License</label>
              <input
                type="text"
                id="license"
                name="license"
                class="form-control"
                value={{barberData.licence_plate}}
              />
            </div>

          {{else}}

              <label for="firstname">First Name</label>
              <input
                type="text"
                id="firstname"
                name="firstname"
                class="form-control"
                placeholder="Please Enter Your First Name"
              />
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                class="form-control"
                placeholder="Please Enter Your Last Name"
              />
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input
                type="text"
                id="phone"
                name="phone"
                class="form-control"
                placeholder="Please Enter Your Last Name"
              />
            </div>
            <div class="form-group">
              <label for="email">Car Model</label>
              <input
                type="text"
                id="car"
                name="car"
                class="form-control"
                placeholder="Please Enter Your Car's Model"
              />
            </div>
            <div class="form-group">
              <label for="email">License</label>
              <input
                type="text"
                id="license"
                name="license"
                class="form-control"
                placeholder="Please Enter Your Car's License Number"
              />
            </div>
          {{/ifvalue}}

        <button type="submit" class="btn btn-primary btn-submit">
          Update Profile
        </button>
      </form>
    </div>
  </div>

  {{else}}

  <div class="col-lg-6 col-md-12 my-5">
    <div class="card card-body">
      <h4 class="text-center mb-3">
        Edit Profile
      </h4>
      <form action="/api/customer/profile" method="POST">
        {{#ifvalue customerData.isUpdated value=1}}
            <div class="form-group">
              <label for="firstname">First Name</label>
              <input
                type="text"
                id="firstname"
                name="firstname"
                class="form-control"
                value={{customerData.firstname}}
              />
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                class="form-control"
                value={{customerData.lastname}}
              />
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input
                type="text"
                id="phone"
                name="phone"
                class="form-control"
                value={{customerData.phone_number}}
              />
            </div>
            <div class="form-group">
              <label for="email">Address</label>
              <input
                type="text"
                id="address"
                name="address"
                class="form-control"
                value={{customerData.address}}
              />
            </div>

        {{else}}

            <div class="form-group">
              <label for="firstname">First Name</label>
              <input
                type="text"
                id="firstname"
                name="firstname"
                class="form-control"
                placeholder="Please Enter Your First Name"
              />
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                class="form-control"
                placeholder="Please Enter Your Last Name"
              />
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input
                type="text"
                id="phone"
                name="phone"
                class="form-control"
                placeholder="Please Enter Your Phone Number"
              />
            </div>
            <div class="form-group">
              <label for="email">Address</label>
              <input
                type="text"
                id="address"
                name="address"
                class="form-control"
                placeholder="Please Enter Your Address"
              />
            </div>
        {{/ifvalue}}

        <button type="submit" class="btn btn-primary btn-submit">
          Update Profile
        </button>
      </form>
    </div>
  </div>


  {{/ifvalue}}





</div>
